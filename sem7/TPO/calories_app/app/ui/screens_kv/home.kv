<HomeScreen@MDScreen>:
    name: "home"
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(12)
        spacing: dp(8)

        MDTopAppBar:
            title: "Главная"
            left_action_items: [["menu", lambda x: None]]
            right_action_items: [["chart-line", lambda x: app.goto_statistics()], ["target", lambda x: app.goto_goals()]]

        MDCard:
            size_hint_y: None
            height: dp(120)
            padding: dp(10)
            pos_hint: {"center_x": .5}
            MDBoxLayout:
                orientation: "vertical"
                MDLabel:
                    id: calories_today
                    text: "Сегодня: 0 ккал"
                    font_style: "H5"
                MDLabel:
                    id: macro_summary
                    text: "Б: — г  Ж: — г  У: — г"
                    theme_text_color: "Secondary"

        MDBoxLayout:
            size_hint_y: None
            height: dp(48)
            spacing: dp(8)
            MDRaisedButton:
                text: "Приёмы пищи"
                on_release: app.goto_meals()
            MDRaisedButton:
                text: "Рекомендации"
                on_release: app.goto_recommendations()

        MDSeparator:

        ScrollView:
            MDList:
                OneLineIconListItem:
                    text: "История за неделю"
                    IconLeftWidget:
                        icon: "history"
                OneLineIconListItem:
                    text: "Цели"
                    IconLeftWidget:
                        icon: "target"
